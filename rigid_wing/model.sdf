<?xml version='1.0'?>
<sdf version='1.6'>
  <model name='rigid_wing'>
    <link name='main_wing'>
      <pose frame=''>-0 0 0.1 0 -0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
        <mass>1</mass>
        <pose frame=''>0 0 0 0 -0 0</pose>
      </inertial>
      <kinematic>0</kinematic>
      <enable_wind>0</enable_wind>
      <visual name='visual'>
        <geometry>
          <box>
            <size>0.8 0.3 0.05</size>
          </box>
        </geometry>
        <material>
          <shader type='pixel'/>
        </material>
        <pose frame=''>0 0 0 0 -0 0</pose>
        <transparency>0</transparency>
        <cast_shadows>1</cast_shadows>
      </visual>
      <collision name='collision'>
        <laser_retro>0</laser_retro>
        <max_contacts>10</max_contacts>
        <pose frame=''>0 0 0 0 -0 0</pose>
        <geometry>
          <box>
            <size>0.8 0.3 0.05</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1</mu>
              <mu2>1</mu2>
              <fdir1>0 0 0</fdir1>
              <slip1>0</slip1>
              <slip2>0</slip2>
            </ode>
            <torsional>
              <coefficient>1</coefficient>
              <patch_radius>0</patch_radius>
              <surface_radius>0</surface_radius>
              <use_patch_radius>1</use_patch_radius>
              <ode>
                <slip>0</slip>
              </ode>
            </torsional>
          </friction>
          <bounce>
            <restitution_coefficient>0</restitution_coefficient>
            <threshold>1e+06</threshold>
          </bounce>
          <contact>
            <collide_without_contact>0</collide_without_contact>
            <collide_without_contact_bitmask>1</collide_without_contact_bitmask>
            <collide_bitmask>1</collide_bitmask>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+13</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0</min_depth>
            </ode>
            <bullet>
              <split_impulse>1</split_impulse>
              <split_impulse_penetration_threshold>-0.01</split_impulse_penetration_threshold>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+13</kp>
              <kd>1</kd>
            </bullet>
          </contact>
        </surface>
      </collision>
		<!-- Sensors added here -->
		<sensor type="altimeter" name="main_altimeter">
			<always_on>true</always_on>
			<topic>/altimeter_data</topic>
			<visualize>true</visualize>
			<update_rate>10</update_rate>
			<frame name="altimeter_frame">
				<pose frame="altimeter_frame">0 0 0 0 0 0</pose>				
			</frame>
			<altimeter>
				<vertical_position>
					<noise type="none">
					</noise>
				</vertical_position>
				<vertical_velocity>
					<noise type="none">
					</noise>
				</vertical_velocity>
			</altimeter>
		</sensor>
		<!-- force sensor is in the joint -->
		<sensor type="magnetometer" name="main_magnetometer">
			<always_on>true</always_on>	
			<topic>/magnetometer_data</topic>
			<visualize>true</visualize>
			<update_rate>10</update_rate>
			<frame name="magnetometer_frame">
				<pose frame="magnetometer_frame">0 0 0 0 0 0</pose>				
			</frame>
			<magnetometer>
				<x>
					<noise type="none"></noise>
				</x>
				<y>
					<noise type="none"></noise>				
				</y>
				<z>
					<noise type="none"></noise>				
				</z>
			</magnetometer>
		</sensor>
    </link>
    <static>0</static>
    <allow_auto_disable>1</allow_auto_disable>
    <plugin name='gazebo_lift_drag' filename='libgazebo_lift_drag.so'>
      <radial_symmetry/>
      <a0>0.08727</a0>
      <cla>5.418</cla>
      <cda>0.0</cda>
      <cma>0.0</cma>
      <alpha_stall>0.3368</alpha_stall>
      <cla_stall>-2.1419</cla_stall>
      <cma_stall>0.0</cma_stall>
      <cp>0.8</cp>
      <forward>1 0 0</forward>
      <upward>0 0 1</upward>
      <area>2.00</area>
      <air_density>1.225</air_density>
      <link_name>rigid_wing::main_wing</link_name>
    </plugin>
    <!--plugin name='gazebo_wind_field' filename='libgazebo_wind_field.so'>
      <windPubTopic>/wind_field</windPubTopic>
      <frameId>"18"</frameId>
      <linkName>rigid_wing::main_wing</linkName>
      <windVelocityMean>10.00</windVelocityMean>
      <windVelocityVariance>5.00</windVelocityVariance>
      <windAzimuth>0.5</windAzimuth>
      <windGustStart>5</windGustStart>
      <windGustDuration>30</windGustDuration>
      <windGustVelocityMean>2</windGustVelocityMean>
      <windGustVelocityVariance>0.1</windGustVelocityVariance>
      <windGustAzimuth>3.55</windGustAzimuth>
    </plugin-->
  <joint name="fixed_to_origin" type="ball">
	  <parent>world</parent>
	  <child>rigid_wing::main_wing</child>
	  <pose>0 0 0 0 0 0</pose>  
	  	<sensor type="force_torque" name="main_force_torque">
			<always_on>true</always_on>	
			<topic>/force_torque_data</topic>
			<visualize>true</visualize>
			<update_rate>100</update_rate>
			<frame name="force_torque_frame">
				<pose frame="force_torque_frame">0 0 0 0 0 0</pose>				
			</frame>
			<force_torque>
				<frame >child</frame>
				<measure_direction>child_to_parent</measure_direction>
			</force_torque>
		</sensor>
        <!--sensor name="tether_force_torque" type="force_torque">
			<always_on>true</always_on>
			<update_rate>100</update_rate>
			<force_torque>
			  <frame>child</frame>
			  <measure_direction>child_to_parent</measure_direction>
			</force_torque>
        </sensor-->
  </joint>
  </model>
</sdf>
